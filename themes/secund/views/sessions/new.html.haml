-unless AppConfig.closed_beta_mode
  .block.small.left
    .block_head
      %h2 Can't login?
    .block_content
      =render :partial => 'shared/login_sidebar'
  

.block.small.right
  .block_head
    %h2
      =:log_in_to_site.l(:site => AppConfig.community_name)
  .block_content        
    - form_tag sessions_path, :class => 'MainForm' do
      %p
        %label{"for"=>"login"}=:username.l
        %br
        = text_field_tag 'login', nil, :size => 35, :class=>"text small"
      %p
        %label{"for"=>"password"}=:password.l
        %br
        = password_field_tag 'password', nil, :size => 35, :class=>"text small"
      %p
        = check_box_tag 'remember_me', :class=>"checkbox"
        %label{"for"=>"remember_me"}
          =:remember_me.l
      %p
        = submit_tag :log_in.l, :class=>"submit mid"
